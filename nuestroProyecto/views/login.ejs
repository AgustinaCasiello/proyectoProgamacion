<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-7-col-md-6">
				<form action="/users/login" method="POST" class="search-form">
					<p>
						<label class="form-label" for="text">Email:</label>
						<input class= "form-input" type="email" name="text" required>
					</p>
					<p>
						<label class="form-label" for="contrasena">Contrase√±a:</label>
						<input class= "form-input" type="password" name="contrasena" required>
					</p>
					<p>
					<label class="form-label" for="recordar">Recordarme:</label>
					<input type="checkbox" name="recordar"><br>
					</p>
					<p>
						<input class= "form-input" type="submit" value="Ingresar">
					</p>
					<% if (errors) { %>
						<p style="color: red;"><%= errors%></p>
				   <% } %>
				</form>
			</div>
		</div>
	</div>
			<%- include('./partials/footer') %>
</body>


</html>