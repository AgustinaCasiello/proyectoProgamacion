<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado') %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/gretaThunberg.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">Greta Thunberg 
						<a href="profile-edit.html">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<button class="btn mt-3 ml-4 seguir" id="seguir">SEGUIR</button>
					<button class="btn mt-3 ml-4 siguiendo" id="siguiendo">SIGUIENDO</button>
				</div>
				<div>
					<ul class="perfill">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<% autos.forEach(element =>{%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="product/<%= element.id%>">
							<figure class="product-box_image">
								<img src="<%= element.image%>" alt="<%= element.nombre%>">
							</figure>
							<article class="product-box_data">
								<h2><%= element.nombre%></h2>
								<p><%= element.descripcion%></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
				<%})%>
		</div>
	</div>
	<!-- /Mis productos -->	<%- include('./partials/footer') %>
</body>	
</html>