<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= usuario.foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.nombre %>
						<% if (logueado && usuario.id == idUsuario){%>
						<form action="/users/profile-edit" method="GET">
							<input type="hidden" name="id" value="<%= usuario.id %>">
							<input type="submit" value="editar">
						</form>
						<% } %>
					</h1>
					<!--<button class="btn mt-3 ml-4 seguir" id="seguir">SEGUIR</button>
					<button class="btn mt-3 ml-4 siguiendo" id="siguiendo">SIGUIENDO</button>-->
				</div>
				<div>
					<ul class="perfill">
						<li>Productos: <%= usuario.UserProdu.length %></li>
						<li>Comentarios: <%= usuario.comentarioUser.length %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<% usuario.UserProdu.forEach(element =>{%>
		<div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box misProductos">
				<a href="http://localhost:3000/product/product/<%= element.id%>">
					<figure class="product-box_image">
						<img src="/images/autos/<%= element.image_URL%>" alt="<%= element.nombre%>">
					</figure>
					<article class="product-box_data">
						<h2><%= element.nombre%></h2>
						<p><%= element.descripcion%></p>
						<p>Comentarios:<%= element.comentarioP.length%></p>
					</article>
				</a>
			</section>
		</div>
		<%})%>

	<!-- /Mis productos -->
		<%- include('./partials/footer') %>
</body>	
</html>